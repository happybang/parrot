
{% macro params(query, body, path) %}
  args: { {{ ("path: " + path + ",") if path }}{{ ("params: " + query + ",") if query }}{{ ("data: " + body + ",") if body }} }
{% endmacro %}


{% if description %}
/**
  * {{description}}
  */
{% endif -%}
function {{name}}({{ params(query, body, path) }}, options?: ClientConfig) {
  return client["{{method}}"]<{{ response | default("void") }}>("{{url}}", {
    {{ "params: args.params," if query }}
    {{ "data: args.data," if body }}
    {{ "path: args.path," if path }}
  }, options)
}